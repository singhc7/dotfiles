# Smooth scrolling and better zoom steps
set smooth-scroll true
set zoom-step 10

# Copy to system clipboard automatically
set selection-clipboard clipboard

# Navigation
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r rotate
map R reload

# Zooming (more intuitive)
map i zoom in
map o zoom out

# Jumping
map [normal]     J zoom in
map [normal]     K zoom out

# Enable recolor by default (optional)
set recolor "true"

# Nord-ish Theme Colors
set default-bg                  "#2E3440"
set default-fg                  "#D8DEE9"

set statusbar-bg                "#2E3440"
set statusbar-fg                "#D8DEE9"

set inputbar-bg                 "#2E3440"
set inputbar-fg                 "#D8DEE9"

# The actual document colors (Recolor mode)
set recolor-lightcolor          "#2E3440"  # Background
set recolor-darkcolor           "#ECEFF4"  # Text
